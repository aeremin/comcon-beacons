<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="137dp"
            tools:layout_editor_absoluteX="0dp" tools:itemCount="15"
            tools:listitem="@layout/recycler_view_item"/>

    <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/menu_status"
            android:layout_width="395dp"
            android:layout_height="514dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            app:menu_icon="@drawable/status_white"
            app:menu_colorNormal="#43A047"
            app:menu_colorPressed="#2E7D32"
            app:menu_colorRipple="#1B5E20"
            app:menu_fab_label="@string/menu_status_cancel" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">

        <com.github.clans.fab.FloatingActionButton
                android:id="@+id/menu_status_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/free_white"
                app:fab_colorNormal="#43A047"
                app:fab_size="mini"
                app:fab_label="@string/menu_status_free"/>
        <com.github.clans.fab.FloatingActionButton
                android:id="@+id/menu_status_adventure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/adventure_white"
                app:fab_colorNormal="#1846C8"
                app:fab_size="mini"
                app:fab_label="@string/menu_status_adventure"/>
        <com.github.clans.fab.FloatingActionButton
                android:id="@+id/menu_status_busy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/busy_white"
                app:fab_colorNormal="#C80E2A"
                app:fab_size="mini"
                app:fab_label="@string/menu_status_busy"/>


    </com.github.clans.fab.FloatingActionMenu>
</android.support.constraint.ConstraintLayout>